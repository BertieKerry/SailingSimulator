function init(self)
	msg.post(".", "acquire_input_focus")
	self.status = false
end

function on_message(self, message_id, message)
	if message_id == hash("flap") and self.status == false then
		sprite.play_flipbook("/boom#boom","flap")
		self.status = true
	elseif message_id == hash("fill") and self.status == true then
		sprite.play_flipbook("/boom#boom","boom")
		self.status = false
	end
end